#!/bin/bash
#string  operatiors

a=abc
b=abc

if [ $a != $b ]
then
        echo "a is not equal to b"

elif [ $a = $b ]
then
        echo " a is equal to b"

else
        echo "none of the above"

fi
[root@ip-172-31-26-236 mnt]# ./text.sh
 a is equal to b
[root@ip-172-31-26-236 mnt]# 
