#!/bin/bash
#relational operatiors

a=200
b=100

if [ $a -gt $b ]
then
        echo " a is gratherthen b"

else  echo " a is lessthen b"

fi
[root@ip-172-31-26-236 mnt]# ./text.sh
 a is gratherthen b
[root@ip-172-31-26-236 mnt]#
